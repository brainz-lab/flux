<% content_for(:title) { "New Dashboard" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_dashboards_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline flux-text-muted">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Dashboards
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight flux-text">New Dashboard</h1>
    <p class="mt-1 text-[13px] flux-text-muted">Create a custom dashboard to visualize your metrics</p>
  </div>

  <div class="px-6 py-5 rounded-xl flux-card">
    <%= form_with model: @dashboard, url: dashboard_project_dashboards_path(@project), class: "space-y-6" do |f| %>
      <% if @dashboard.errors.any? %>
        <div class="p-4 rounded-lg flux-alert-error">
          <p class="text-[13px] font-medium">Please fix the following errors:</p>
          <ul class="mt-2 list-disc list-inside text-[13px]">
            <% @dashboard.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :name, class: "block text-[13px] font-medium flux-text" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input", placeholder: "My Dashboard" %>
      </div>

      <div class="space-y-2">
        <%= f.label :description, class: "block text-[13px] font-medium flux-text" %>
        <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input", placeholder: "Dashboard description (optional)" %>
      </div>

      <div class="flex items-center gap-6">
        <label class="flex items-center gap-2 cursor-pointer">
          <%= f.check_box :is_default, class: "w-4 h-4 rounded" %>
          <span class="text-[13px] flux-text-secondary">Set as default dashboard</span>
        </label>

        <label class="flex items-center gap-2 cursor-pointer">
          <%= f.check_box :is_public, class: "w-4 h-4 rounded" %>
          <span class="text-[13px] flux-text-secondary">Make publicly accessible</span>
        </label>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t flux-border">
        <%= f.submit "Create Dashboard", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors flux-btn-primary" %>
        <a href="<%= dashboard_project_dashboards_path(@project) %>" class="px-4 py-2 text-[13px] font-medium rounded-lg transition-colors flux-text-secondary">
          Cancel
        </a>
      </div>
    <% end %>
  </div>
</div>
