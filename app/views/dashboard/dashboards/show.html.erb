<% content_for(:title) { @dashboard.name } %>

<div class="space-y-8">
  <div class="flex items-start justify-between">
    <div>
      <a href="<%= dashboard_project_dashboards_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline flux-text-muted">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Dashboards
      </a>
      <h1 class="mt-3 text-[22px] font-semibold tracking-tight flux-text"><%= @dashboard.name %></h1>
      <% if @dashboard.description.present? %>
        <p class="mt-1 text-[13px] flux-text-muted"><%= @dashboard.description %></p>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <a href="<%= edit_dashboard_project_dashboard_path(@project, @dashboard) %>" class="inline-flex items-center gap-2 px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors flux-btn-secondary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit
      </a>
      <a href="<%= new_dashboard_project_dashboard_widget_path(@project, @dashboard) %>" class="inline-flex items-center gap-2 px-3 py-1.5 text-[13px] font-medium rounded-lg transition-colors flux-btn-primary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Widget
      </a>
    </div>
  </div>

  <% if @widgets.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @widgets.each do |widget| %>
        <div class="px-5 py-4 rounded-xl flux-card">
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-[14px] font-medium flux-text"><%= widget.title || "Untitled Widget" %></h3>
            <span class="px-2 py-0.5 text-[11px] font-medium rounded-full flux-badge">
              <%= widget.widget_type %>
            </span>
          </div>
          <div class="h-32 flex items-center justify-center rounded-lg flux-bg-muted">
            <p class="text-[13px] flux-text-muted">Widget preview</p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 rounded-xl flux-card">
      <div class="space-y-3">
        <svg class="mx-auto w-12 h-12 flux-text-disabled" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
        </svg>
        <p class="text-[15px] flux-text-secondary">No widgets yet</p>
        <p class="text-[13px] flux-text-muted">Add widgets to visualize your metrics</p>
        <a href="<%= new_dashboard_project_dashboard_widget_path(@project, @dashboard) %>" class="inline-flex items-center gap-2 mt-4 px-4 py-2 text-[13px] font-medium rounded-lg transition-colors flux-btn-primary">
          Add your first widget
        </a>
      </div>
    </div>
  <% end %>
</div>
