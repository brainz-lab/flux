<% content_for(:title) { @event.name } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_events_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline" style="color: #8B8780;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Events
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;"><%= @event.name %></h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;"><%= @event.timestamp.strftime("%B %d, %Y at %H:%M:%S %Z") %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
      <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Event Details</h2>
      <dl class="space-y-3">
        <div class="flex justify-between">
          <dt class="text-[13px]" style="color: #8B8780;">Event ID</dt>
          <dd class="text-[13px] font-mono" style="color: #1A1A1A;"><%= @event.id %></dd>
        </div>
        <% if @event.environment.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Environment</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @event.environment %></dd>
          </div>
        <% end %>
        <% if @event.service.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Service</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @event.service %></dd>
          </div>
        <% end %>
        <% if @event.host.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Host</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @event.host %></dd>
          </div>
        <% end %>
        <% if @event.user_id.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">User ID</dt>
            <dd class="text-[13px] font-mono" style="color: #1A1A1A;"><%= @event.user_id %></dd>
          </div>
        <% end %>
        <% if @event.session_id.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Session ID</dt>
            <dd class="text-[13px] font-mono" style="color: #1A1A1A;"><%= @event.session_id %></dd>
          </div>
        <% end %>
        <% if @event.request_id.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Request ID</dt>
            <dd class="text-[13px] font-mono" style="color: #1A1A1A;"><%= @event.request_id %></dd>
          </div>
        <% end %>
        <% if @event.value.present? %>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Value</dt>
            <dd class="text-[13px] font-medium" style="color: #1A1A1A;"><%= number_with_precision(@event.value, precision: 2) %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <div class="space-y-6">
      <% if @event.properties.present? && @event.properties.any? %>
        <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
          <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Properties</h2>
          <pre class="p-3 rounded-lg text-[12px] overflow-x-auto" style="background: #FAF9F7; color: #1A1A1A;"><code><%= JSON.pretty_generate(@event.properties) %></code></pre>
        </div>
      <% end %>

      <% if @event.tags.present? && @event.tags.any? %>
        <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
          <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Tags</h2>
          <div class="flex flex-wrap gap-2">
            <% @event.tags.each do |key, value| %>
              <span class="px-2 py-1 text-[12px] rounded-full" style="background: #F0EFED; color: #6B6760;">
                <%= key %>: <%= value %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
