<% content_for(:title) { "New Project" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_projects_path %>" class="inline-flex items-center gap-1 text-[13px] hover:underline" style="color: #8B8780;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Projects
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">New Project</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Create a new Flux project</p>
  </div>

  <div class="px-6 py-5 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <%= form_with model: @project, url: dashboard_projects_path, class: "space-y-6" do |f| %>
      <% if @project.errors.any? %>
        <div class="p-4 rounded-lg" style="background: #FEE2E2; border: 1px solid #FECACA;">
          <p class="text-[13px] font-medium" style="color: #DC2626;">Please fix the following errors:</p>
          <ul class="mt-2 list-disc list-inside text-[13px]" style="color: #DC2626;">
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :name, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "My Project", required: true %>
      </div>

      <div class="space-y-2">
        <%= f.label :description, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
        <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Project description (optional)" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-2">
          <%= f.label :environment, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
          <%= f.select :environment, [["Development", "development"], ["Staging", "staging"], ["Production", "production"]], {}, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <div class="space-y-2">
          <%= f.label :retention_days, "Retention (days)", class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
          <%= f.number_field :retention_days, value: 90, min: 1, max: 365, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4" style="border-top: 1px solid #E8E5E0;">
        <%= f.submit "Create Project", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
        <a href="<%= dashboard_projects_path %>" class="px-4 py-2 text-[13px] font-medium rounded-lg transition-colors" style="color: #6B6760;">
          Cancel
        </a>
      </div>
    <% end %>
  </div>
</div>
