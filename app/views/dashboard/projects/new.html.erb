<% content_for(:title) { "New Project" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_projects_path %>" class="inline-flex items-center gap-1 text-[13px] hover:underline flux-text-muted">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Projects
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight flux-text">New Project</h1>
    <p class="mt-1 text-[13px] flux-text-muted">Create a new Flux project</p>
  </div>

  <div class="px-6 py-5 rounded-xl flux-card">
    <%= form_with model: @project, url: dashboard_projects_path, class: "space-y-6" do |f| %>
      <% if @project.errors.any? %>
        <div class="p-4 rounded-lg flux-alert-error">
          <p class="text-[13px] font-medium">Please fix the following errors:</p>
          <ul class="mt-2 list-disc list-inside text-[13px]">
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :name, class: "block text-[13px] font-medium flux-text" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input", placeholder: "My Project", required: true %>
      </div>

      <div class="space-y-2">
        <%= f.label :description, class: "block text-[13px] font-medium flux-text" %>
        <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input", placeholder: "Project description (optional)" %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div class="space-y-2">
          <%= f.label :environment, class: "block text-[13px] font-medium flux-text" %>
          <%= f.select :environment, [["Development", "development"], ["Staging", "staging"], ["Production", "production"]], {}, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input" %>
        </div>

        <div class="space-y-2">
          <%= f.label :retention_days, "Retention (days)", class: "block text-[13px] font-medium flux-text" %>
          <%= f.number_field :retention_days, value: 90, min: 1, max: 365, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input" %>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t flux-border">
        <%= f.submit "Create Project", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors flux-btn-primary" %>
        <a href="<%= dashboard_projects_path %>" class="px-4 py-2 text-[13px] font-medium rounded-lg transition-colors flux-text-secondary">
          Cancel
        </a>
      </div>
    <% end %>
  </div>
</div>
