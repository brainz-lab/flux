<% content_for(:title) { "#{@project.name} Settings" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_overview_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline" style="color: #8B8780;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= @project.name %>
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Project Settings</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Manage project configuration</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="px-6 py-5 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <h2 class="text-[15px] font-medium mb-4" style="color: #1A1A1A;">General</h2>
        <%= form_with model: @project, url: dashboard_project_path(@project), method: :patch, class: "space-y-4" do |f| %>
          <div class="space-y-2">
            <%= f.label :name, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
            <%= f.text_field :name, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>

          <div class="space-y-2">
            <%= f.label :description, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
            <%= f.text_area :description, rows: 3, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-2">
              <%= f.label :environment, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
              <%= f.select :environment, [["Development", "development"], ["Staging", "staging"], ["Production", "production"]], {}, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
            </div>

            <div class="space-y-2">
              <%= f.label :retention_days, "Retention (days)", class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
              <%= f.number_field :retention_days, min: 1, max: 365, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
            </div>
          </div>

          <div class="pt-4">
            <%= f.submit "Save Changes", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="space-y-6">
      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">API Keys</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-[12px]" style="color: #8B8780;">API Key</dt>
            <dd class="mt-1 text-[12px] font-mono break-all" style="color: #1A1A1A;"><%= @project.api_key %></dd>
          </div>
          <div>
            <dt class="text-[12px]" style="color: #8B8780;">Ingest Key</dt>
            <dd class="mt-1 text-[12px] font-mono break-all" style="color: #1A1A1A;"><%= @project.ingest_key %></dd>
          </div>
        </dl>
      </div>

      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Statistics</h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Events</dt>
            <dd class="text-[13px] font-medium" style="color: #1A1A1A;"><%= number_with_delimiter(@project.events_count) %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Metrics</dt>
            <dd class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @project.metric_definitions.count %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Dashboards</dt>
            <dd class="text-[13px] font-medium" style="color: #1A1A1A;"><%= @project.flux_dashboards.count %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Created</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @project.created_at.strftime("%b %d, %Y") %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
