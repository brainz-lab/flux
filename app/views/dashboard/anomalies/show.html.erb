<% content_for(:title) { "Anomaly Details" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_anomalies_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline" style="color: #8B8780;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Anomalies
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">
      <%= @anomaly.anomaly_type.titleize %> in <%= @anomaly.source_name %>
    </h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">
      Detected <%= time_ago_in_words(@anomaly.detected_at) %> ago
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-[14px] font-medium" style="color: #1A1A1A;">Anomaly Timeline</h2>
        </div>
        <div class="h-48 flex items-center justify-center rounded-lg" style="background: #FAF9F7;">
          <p class="text-[13px]" style="color: #8B8780;">Timeline visualization</p>
        </div>
      </div>

      <% if @anomaly.context.present? && @anomaly.context.any? %>
        <div class="mt-6 px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
          <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Context</h2>
          <pre class="p-3 rounded-lg text-[12px] overflow-x-auto" style="background: #FAF9F7; color: #1A1A1A;"><code><%= JSON.pretty_generate(@anomaly.context) %></code></pre>
        </div>
      <% end %>
    </div>

    <div class="space-y-6">
      <% severity_colors = { 'critical' => '#DC2626', 'warning' => '#D97706', 'info' => '#2563EB' } %>
      <% severity_bg = { 'critical' => '#FEE2E2', 'warning' => '#FEF3C7', 'info' => '#DBEAFE' } %>

      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-[14px] font-medium" style="color: #1A1A1A;">Status</h2>
          <span class="px-2 py-0.5 text-[11px] font-medium rounded-full capitalize" style="background: <%= severity_bg[@anomaly.severity] %>; color: <%= severity_colors[@anomaly.severity] %>;">
            <%= @anomaly.severity %>
          </span>
        </div>
        <div class="space-y-3">
          <% if @anomaly.acknowledged %>
            <p class="text-[13px]" style="color: #6B6760;">This anomaly has been acknowledged</p>
          <% else %>
            <%= button_to acknowledge_dashboard_project_anomaly_path(@project, @anomaly), method: :post, class: "w-full px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors text-center", style: "background: #1A1A1A; color: #FFFFFE;" do %>
              Acknowledge Anomaly
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Details</h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Source</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @anomaly.source %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Source Name</dt>
            <dd class="text-[13px] font-mono" style="color: #1A1A1A;"><%= @anomaly.source_name %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Type</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @anomaly.anomaly_type.titleize %></dd>
          </div>
          <% if @anomaly.expected_value.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px]" style="color: #8B8780;">Expected</dt>
              <dd class="text-[13px]" style="color: #1A1A1A;"><%= number_with_precision(@anomaly.expected_value, precision: 2) %></dd>
            </div>
          <% end %>
          <% if @anomaly.actual_value.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px]" style="color: #8B8780;">Actual</dt>
              <dd class="text-[13px]" style="color: #1A1A1A;"><%= number_with_precision(@anomaly.actual_value, precision: 2) %></dd>
            </div>
          <% end %>
          <% if @anomaly.deviation_percent.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px]" style="color: #8B8780;">Deviation</dt>
              <dd class="text-[13px] font-medium" style="color: <%= @anomaly.deviation_percent > 0 ? '#DC2626' : '#16A34A' %>;">
                <%= @anomaly.deviation_percent > 0 ? '+' : '' %><%= number_with_precision(@anomaly.deviation_percent, precision: 1) %>%
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <div class="px-5 py-4 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
        <h2 class="text-[14px] font-medium mb-4" style="color: #1A1A1A;">Timing</h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-[13px]" style="color: #8B8780;">Detected</dt>
            <dd class="text-[13px]" style="color: #1A1A1A;"><%= @anomaly.detected_at.strftime("%b %d, %Y %H:%M") %></dd>
          </div>
          <% if @anomaly.started_at.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px]" style="color: #8B8780;">Started</dt>
              <dd class="text-[13px]" style="color: #1A1A1A;"><%= @anomaly.started_at.strftime("%b %d, %Y %H:%M") %></dd>
            </div>
          <% end %>
          <% if @anomaly.ended_at.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px]" style="color: #8B8780;">Ended</dt>
              <dd class="text-[13px]" style="color: #1A1A1A;"><%= @anomaly.ended_at.strftime("%b %d, %Y %H:%M") %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  </div>
</div>
