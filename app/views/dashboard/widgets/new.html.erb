<% content_for(:title) { "Add Widget" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_dashboard_path(@project, @dashboard) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline flux-text-muted">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= @dashboard.name %>
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight flux-text">Add Widget</h1>
    <p class="mt-1 text-[13px] flux-text-muted">Add a new visualization to your dashboard</p>
  </div>

  <div class="px-6 py-5 rounded-xl flux-card">
    <%= form_with model: @widget, url: dashboard_project_dashboard_widgets_path(@project, @dashboard), class: "space-y-6" do |f| %>
      <% if @widget.errors.any? %>
        <div class="p-4 rounded-lg flux-alert-error">
          <p class="text-[13px] font-medium">Please fix the following errors:</p>
          <ul class="mt-2 list-disc list-inside text-[13px]">
            <% @widget.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :title, class: "block text-[13px] font-medium flux-text" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 flux-input", placeholder: "My Widget" %>
      </div>

      <div class="space-y-2">
        <%= f.label :widget_type, "Widget Type", class: "block text-[13px] font-medium flux-text" %>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% Widget::WIDGET_TYPES.each do |type| %>
            <label class="relative cursor-pointer">
              <%= f.radio_button :widget_type, type, class: "peer sr-only" %>
              <div class="p-4 rounded-lg text-center transition-colors flux-bg-muted flux-border peer-checked:ring-2 peer-checked:ring-[var(--flux-text)]">
                <p class="text-[13px] font-medium flux-text"><%= type.titleize %></p>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4 border-t flux-border">
        <%= f.submit "Add Widget", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors flux-btn-primary" %>
        <a href="<%= dashboard_project_dashboard_path(@project, @dashboard) %>" class="px-4 py-2 text-[13px] font-medium rounded-lg transition-colors flux-text-secondary">
          Cancel
        </a>
      </div>
    <% end %>
  </div>
</div>
