<% content_for(:title) { "Edit Widget" } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_dashboard_path(@dashboard) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline" style="color: #8B8780;">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= @dashboard.name %>
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">Edit Widget</h1>
    <p class="mt-1 text-[13px]" style="color: #8B8780;">Configure widget settings</p>
  </div>

  <div class="px-6 py-5 rounded-xl" style="background: #FFFFFE; border: 1px solid #E8E5E0;">
    <%= form_with model: @widget, url: dashboard_dashboard_widget_path(@dashboard, @widget), method: :patch, class: "space-y-6" do |f| %>
      <% if @widget.errors.any? %>
        <div class="p-4 rounded-lg" style="background: #FEE2E2; border: 1px solid #FECACA;">
          <p class="text-[13px] font-medium" style="color: #DC2626;">Please fix the following errors:</p>
          <ul class="mt-2 list-disc list-inside text-[13px]" style="color: #DC2626;">
            <% @widget.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :title, class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
        <%= f.text_field :title, class: "w-full px-3 py-2 text-[14px] rounded-lg focus:outline-none focus:ring-2 focus:ring-[#1A1A1A]", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
      </div>

      <div class="space-y-2">
        <%= f.label :widget_type, "Widget Type", class: "block text-[13px] font-medium", style: "color: #1A1A1A;" %>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% Widget::WIDGET_TYPES.each do |type| %>
            <label class="relative cursor-pointer">
              <%= f.radio_button :widget_type, type, class: "peer sr-only" %>
              <div class="p-4 rounded-lg text-center transition-colors peer-checked:ring-2 peer-checked:ring-[#1A1A1A]" style="background: #FAF9F7; border: 1px solid #E8E5E0;">
                <p class="text-[13px] font-medium" style="color: #1A1A1A;"><%= type.titleize %></p>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <div class="flex items-center justify-between pt-4" style="border-top: 1px solid #E8E5E0;">
        <div class="flex items-center gap-3">
          <%= f.submit "Update Widget", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
          <a href="<%= dashboard_dashboard_path(@dashboard) %>" class="px-4 py-2 text-[13px] font-medium rounded-lg transition-colors" style: "color: #6B6760;">
            Cancel
          </a>
        </div>
        <%= button_to dashboard_dashboard_widget_path(@dashboard, @widget), method: :delete, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #FEE2E2; color: #DC2626;", data: { turbo_confirm: "Are you sure you want to delete this widget?" } do %>
          Delete
        <% end %>
      </div>
    <% end %>
  </div>
</div>
