<% content_for(:title) { "Metrics" } %>

<div class="space-y-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[22px] font-semibold tracking-tight dm-text">Metrics</h1>
      <p class="mt-1 text-[13px] dm-text-muted">Metric definitions and time series</p>
    </div>
  </div>

  <% if @metrics.any? %>
    <div class="space-y-3">
      <% @metrics.each do |metric| %>
        <div class="px-5 py-4 rounded-xl dm-card">
          <div class="flex items-center justify-between">
            <div class="space-y-1">
              <h3 class="text-[15px] font-medium dm-text"><%= metric.name %></h3>
              <p class="text-[13px] dm-text-muted">
                <%= metric.metric_type.capitalize %> Â· <%= metric.unit || 'no unit' %>
              </p>
            </div>
            <div class="flex items-center gap-4">
              <span class="px-2 py-0.5 text-[11px] font-medium rounded-full dm-badge">
                <%= metric.metric_type %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 rounded-xl dm-card">
      <div class="space-y-3">
        <p class="text-[15px] dm-text-secondary">No metrics defined yet</p>
        <p class="text-[13px] dm-text-muted">Track metrics using the SDK:</p>
        <pre class="mt-3 mx-auto max-w-md p-4 rounded-lg text-[13px] text-left dm-code"><code>BrainzLab::Flux.gauge("users.online", 234)
BrainzLab::Flux.increment("api.requests")</code></pre>
      </div>
    </div>
  <% end %>
</div>
