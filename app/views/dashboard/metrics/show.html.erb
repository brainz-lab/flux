<% content_for(:title) { @metric.display_name || @metric.name } %>

<div class="space-y-8">
  <div>
    <a href="<%= dashboard_project_metrics_path(@project) %>" class="inline-flex items-center gap-1 text-[13px] hover:underline dm-text-muted">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Metrics
    </a>
    <h1 class="mt-3 text-[22px] font-semibold tracking-tight dm-text"><%= @metric.display_name || @metric.name %></h1>
    <p class="mt-1 text-[13px] dm-text-muted">
      <%= @metric.metric_type.capitalize %><%= @metric.unit.present? ? " Â· #{@metric.unit}" : "" %>
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <div class="px-5 py-4 rounded-xl dm-card">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-[14px] font-medium dm-text">Time Series</h2>
          <div class="flex items-center gap-2">
            <button class="px-2 py-1 text-[12px] rounded dm-btn-secondary">1h</button>
            <button class="px-2 py-1 text-[12px] rounded dm-btn-primary">24h</button>
            <button class="px-2 py-1 text-[12px] rounded dm-btn-secondary">7d</button>
            <button class="px-2 py-1 text-[12px] rounded dm-btn-secondary">30d</button>
          </div>
        </div>
        <div class="h-64 flex items-center justify-center rounded-lg dm-surface-alt" data-controller="chart">
          <p class="text-[13px] dm-text-muted">Chart will render here</p>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="px-5 py-4 rounded-xl dm-card">
        <h2 class="text-[14px] font-medium mb-4 dm-text">Statistics</h2>
        <% if @stats.present? %>
          <p class="text-[32px] font-semibold dm-text">
            <%= number_with_precision(@stats[:avg] || @stats[:sum] || @stats[:count] || 0, precision: 2) %>
            <% if @metric.unit.present? %>
              <span class="text-[14px] font-normal dm-text-muted"><%= @metric.unit %></span>
            <% end %>
          </p>
          <div class="mt-3 grid grid-cols-2 gap-3">
            <% if @stats[:min].present? %>
              <div>
                <p class="text-[11px] dm-text-muted">Min</p>
                <p class="text-[14px] font-medium dm-text"><%= number_with_precision(@stats[:min], precision: 2) %></p>
              </div>
            <% end %>
            <% if @stats[:max].present? %>
              <div>
                <p class="text-[11px] dm-text-muted">Max</p>
                <p class="text-[14px] font-medium dm-text"><%= number_with_precision(@stats[:max], precision: 2) %></p>
              </div>
            <% end %>
            <% if @stats[:count].present? %>
              <div>
                <p class="text-[11px] dm-text-muted">Count</p>
                <p class="text-[14px] font-medium dm-text"><%= @stats[:count] %></p>
              </div>
            <% end %>
            <% if @stats[:sum].present? %>
              <div>
                <p class="text-[11px] dm-text-muted">Sum</p>
                <p class="text-[14px] font-medium dm-text"><%= number_with_precision(@stats[:sum], precision: 2) %></p>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-[14px] dm-text-muted">No data</p>
        <% end %>
      </div>

      <div class="px-5 py-4 rounded-xl dm-card">
        <h2 class="text-[14px] font-medium mb-4 dm-text">Definition</h2>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-[13px] dm-text-muted">Name</dt>
            <dd class="text-[13px] font-mono dm-text"><%= @metric.name %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-[13px] dm-text-muted">Type</dt>
            <dd class="text-[13px] dm-text"><%= @metric.metric_type %></dd>
          </div>
          <% if @metric.unit.present? %>
            <div class="flex justify-between">
              <dt class="text-[13px] dm-text-muted">Unit</dt>
              <dd class="text-[13px] dm-text"><%= @metric.unit %></dd>
            </div>
          <% end %>
          <div class="flex justify-between">
            <dt class="text-[13px] dm-text-muted">Created</dt>
            <dd class="text-[13px] dm-text"><%= @metric.created_at.strftime("%b %d, %Y") %></dd>
          </div>
        </dl>
      </div>

      <% if @metric.description.present? %>
        <div class="px-5 py-4 rounded-xl dm-card">
          <h2 class="text-[14px] font-medium mb-2 dm-text">Description</h2>
          <p class="text-[13px] dm-text-secondary"><%= @metric.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
