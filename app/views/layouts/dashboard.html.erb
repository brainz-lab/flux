<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Flux - <%= content_for(:title) || "Custom Metrics" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <style>
    :root {
      /* Flux-specific brand colors */
      --color-flux: #F97316;
      --color-flux-dark: #EA580C;
      --color-flux-light: #FB923C;
      --color-flux-bg: #FFEDD5;
      --color-flux-bg-subtle: #FFF7ED;
    }
  </style>

  <%# Prevent flash of wrong theme on page load %>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('brainzlab-theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }
    })();
  </script>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full antialiased flux-bg">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col flux-sidebar">
      <div class="p-5 flux-border" style="border-bottom-width: 1px;">
        <div class="flex items-center justify-between">
          <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
            <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--flux-accent);">
              <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M6 18V10M12 18V6M18 18V14" stroke-linecap="round"/>
              </svg>
            </div>
            <span class="font-semibold flux-text">Flux</span>
          <% end %>
          <button type="button"
                  class="dark-mode-toggle"
                  data-action="click->dark-mode#toggle"
                  data-dark-mode-target="icon"
                  title="Toggle dark mode">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
        </div>
      </div>

      <% if @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b flux-border">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition flux-text-secondary hover:flux-text" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: var(--flux-accent-bg-muted); color: var(--flux-accent);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= @project.name %></span>
            <svg class="w-4 h-4 flux-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_overview_path(@project), class: nav_link_class(:overview) do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_events_path(@project), class: nav_link_class(:events) do %>
            <%= icon(:events) %>
            Events
          <% end %>

          <%= link_to dashboard_project_metrics_path(@project), class: nav_link_class(:metrics) do %>
            <%= icon(:metrics) %>
            Metrics
          <% end %>

          <%= link_to dashboard_project_dashboards_path(@project), class: nav_link_class([:dashboards, :widgets]) do %>
            <%= icon(:dashboards) %>
            Dashboards
          <% end %>

          <%= link_to dashboard_project_anomalies_path(@project), class: nav_link_class(:anomalies) do %>
            <%= icon(:anomalies) %>
            Anomalies
          <% end %>

          <%= link_to dashboard_project_setup_path(@project), class: nav_link_class(:setup) do %>
            <%= icon(:setup) %>
            Setup
          <% end %>

          <%= link_to dashboard_project_mcp_path(@project), class: nav_link_class(:mcp_setup) do %>
            <%= icon(:mcp) %>
            MCP
          <% end %>
        </nav>

        <% if Rails.env.development? %>
          <div class="px-4 pb-3">
            <%= link_to dashboard_project_dev_tools_path(@project), class: "nav-item" do %>
              <%= icon(:dev_tools) %>
              Dev Tools
            <% end %>
          </div>
        <% end %>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 flux-text-muted">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user %>
        <div class="p-4 border-t flux-border">
          <div class="flex items-center gap-3">
            <div class="avatar avatar-md avatar-primary">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate flux-text"><%= current_user.name || current_user.email.split('@').first %></p>
              <p class="text-xs truncate flux-text-muted"><%= current_user.email %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto flux-bg">
      <% if notice %>
        <div class="m-8 mb-0 alert flux-badge-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 alert flux-alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
