<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <title>Flux - <%= content_for(:title) || "Custom Metrics" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    :root {
      --color-cream-50: #FAF9F7;
      --color-cream-100: #F5F3EF;
      --color-cream-200: #E8E5E0;
      --color-ink-900: #1A1A1A;
      --color-ink-700: #3D3D3D;
      --color-ink-600: #525252;
      --color-ink-500: #6B6B6B;
      --color-ink-400: #8B8780;
      --color-ink-300: #A8A29E;
      --color-flux: #F97316;
      --color-flux-dark: #EA580C;
      --color-success: #22C55E;
      --color-warning: #F59E0B;
      --color-error: #EF4444;
    }
    body { font-family: 'Inter', system-ui, sans-serif; }
  </style>
</head>
<body class="h-full antialiased" style="background: var(--color-cream-50);">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 border-r flex flex-col" style="border-color: var(--color-cream-200); background: #FFFFFE;">
      <div class="p-5 border-b" style="border-color: var(--color-cream-100);">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-flux);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M6 18V10M12 18V6M18 18V14" stroke-linecap="round"/>
            </svg>
          </div>
          <span class="font-semibold" style="color: var(--color-ink-900);">Flux</span>
        <% end %>
      </div>

      <% if @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b" style="border-color: var(--color-cream-100);">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg hover:bg-[var(--color-cream-100)] transition" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: var(--color-cream-200); color: var(--color-ink-600);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate" style="color: var(--color-ink-700);"><%= @project.name %></span>
            <svg class="w-4 h-4" style="color: var(--color-ink-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <% overview_active = controller_name == 'overview' %>
          <%= link_to dashboard_project_overview_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{overview_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            Overview
          <% end %>

          <% events_active = controller_name == 'events' %>
          <%= link_to dashboard_project_events_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{events_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Events
          <% end %>

          <% metrics_active = controller_name == 'metrics' %>
          <%= link_to dashboard_project_metrics_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{metrics_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Metrics
          <% end %>

          <% dashboards_active = controller_name == 'dashboards' || controller_name == 'widgets' %>
          <%= link_to dashboard_project_dashboards_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{dashboards_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
            </svg>
            Dashboards
          <% end %>

          <% anomalies_active = controller_name == 'anomalies' %>
          <%= link_to dashboard_project_anomalies_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{anomalies_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            Anomalies
          <% end %>

          <% setup_active = controller_name == 'setup' %>
          <%= link_to dashboard_project_setup_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{setup_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Setup
          <% end %>

          <% mcp_active = controller_name == 'mcp_setup' %>
          <%= link_to dashboard_project_mcp_path(@project),
              class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
              style: "#{mcp_active ? 'background: rgba(249, 115, 22, 0.1); color: var(--color-flux);' : 'color: var(--color-ink-600);'}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
            </svg>
            MCP
          <% end %>
        </nav>

        <% if Rails.env.development? %>
          <div class="px-4 pb-2">
            <%= link_to dashboard_project_dev_tools_path(@project),
                class: "flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium transition",
                style: "background: #FEF3C7; color: #92400E;" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
              </svg>
              Dev Tools
            <% end %>
          </div>
        <% end %>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3" style="color: var(--color-ink-400);">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user %>
        <div class="p-4 border-t" style="border-color: var(--color-cream-100);">
          <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-full flex items-center justify-center text-sm font-semibold" style="background: rgba(249, 115, 22, 0.15); color: var(--color-flux);">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium truncate" style="color: var(--color-ink-900);"><%= current_user.name || current_user.email.split('@').first %></p>
              <p class="text-xs truncate" style="color: var(--color-ink-500);"><%= current_user.email %></p>
            </div>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(34, 197, 94, 0.1); border: 1px solid rgba(34, 197, 94, 0.2); color: #166534;">
          <%= notice %>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-sm font-medium" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #991B1B;">
          <%= alert %>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
